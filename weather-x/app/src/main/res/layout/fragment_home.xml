<!--                        app:timestampToSimpleHour="@{viewModel.currentInfo != null ? viewModel.currentInfo.sunset : 0}"-->
<!--                        android:textSize="@dimen/_12ssp" />-->

                </LinearLayout>

            </LinearLayout>

            <org.xapps.apps.weatherx.views.custom.ForecastCardView
                android:id="@+id/popCard"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:fc_description="@string/precipitation"
                app:fc_icon="@drawable/ic_rain"
                app:fc_iconSize="@dimen/_10sdp"
                app:fc_iconTint="@color/rain"
                app:precipitation="@{viewModel.currentInfo}" />

            <org.xapps.apps.weatherx.views.custom.ForecastCardView
                android:id="@+id/pressureCard"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:fc_description="@string/pressure"
                app:fc_icon="@drawable/ic_gauge"
                app:fc_iconSize="@dimen/_10sdp"
                app:fc_iconTint="@color/pressure"
                app:pressure="@{viewModel.currentInfo}" />

            <org.xapps.apps.weatherx.views.custom.ForecastCardView
                android:id="@+id/windCard"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:fc_description="East"
                app:fc_icon="@drawable/ic_wind"
                app:fc_iconSize="@dimen/_10sdp"
                app:fc_iconTint="@color/windSpeed"
                app:windSpeed="@{viewModel.currentInfo}"/>

            <org.xapps.apps.weatherx.views.custom.ForecastCardView
                android:id="@+id/realFeelCard"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:fc_description="@string/real_feel"
                app:fc_icon="@drawable/ic_thermometer"
                app:fc_iconSize="@dimen/_10sdp"
                app:fc_iconTint="@color/realFeel"
                app:realFeel="@{viewModel.currentInfo}" />

            <org.xapps.apps.weatherx.views.custom.ForecastCardView
                android:id="@+id/uvIndexCard"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:fc_description="@string/uv_index"
                app:fc_icon="@drawable/ic_sun"
                app:fc_iconSize="@dimen/_10sdp"
                app:fc_iconTint="@color/uvIndex"
                app:uvindex="@{viewModel.currentInfo}" />

            <org.xapps.apps.weatherx.views.custom.ForecastCardView
                android:id="@+id/humidityCard"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:fc_description="@string/humidity"
                app:fc_icon="@drawable/ic_water"
                app:fc_iconSize="@dimen/_10sdp"
                app:fc_iconTint="@color/humidity"
                app:humidity="@{viewModel.currentInfo}" />

            <org.xapps.apps.weatherx.views.custom.ForecastCardView
                android:id="@+id/visibilityCard"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:fc_description="@string/visibility"
                app:fc_icon="@drawable/ic_eye_off"
                app:fc_iconSize="@dimen/_10sdp"
                app:fc_iconTint="@color/visibility"
                app:visibility="@{viewModel.currentInfo}" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listHourlySimple"
                android:layout_width="0dp"
                android:layout_height="@dimen/_100sdp"
                android:orientation="horizontal"
                tools:itemCount="10"
                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_hourly_simple_info" />

            <TextView
                android:id="@+id/txvNextTwentyFourHours"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next_24_hours"
                android:textColor="?attr/colorOnSurface"
                android:textSize="@dimen/_20ssp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listHourly"
                android:layout_width="0dp"
                android:layout_height="@dimen/_120sdp"
                android:orientation="horizontal"
                tools:itemCount="10"
                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_hourly_info" />

            <TextView
                android:id="@+id/txvNextSevenDays"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next_7_days"
                android:textColor="?attr/colorOnSurface"
                android:textSize="@dimen/_20ssp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listDaily"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                tools:itemCount="7"
                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_daily_info" />

            <View
                android:id="@+id/draggerEnd"
                android:layout_width="0dp"
                android:layout_height="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                android:id="@+id/draggerHalf"
                android:layout_width="0dp"
                android:layout_height="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.motion.widget.MotionLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>