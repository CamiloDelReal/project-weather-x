                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.6" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/h70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.7" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/h79"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.79" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/h98"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.98" />


            <ImageButton
                android:id="@+id/btnAdd"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginEnd="@dimen/_4sdp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:fitsSystemWindows="true"
                android:src="@drawable/ic_add" />

            <TextView
                android:id="@+id/txvCounty"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/_4sdp"
                android:text="@{viewModel.place != null ? viewModel.place.city : @string/empty}"
                android:textColor="?attr/colorOnPrimarySurface"
                android:textSize="@dimen/_20ssp"
                tools:text="Belgrade" />

            <TextView
                android:id="@+id/txvCountry"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.place != null ? viewModel.place.country : @string/empty}"
                android:textColor="?attr/colorOnPrimarySurface"
                tools:text="Serbia" />

            <View
                android:id="@+id/centerDotMarker"
                android:layout_width="@dimen/_4sdp"
                android:layout_height="@dimen/_4sdp"
                android:background="@drawable/ic_bg_dot_marker" />

            <View
                android:id="@+id/topDotMarker"
                android:layout_width="@dimen/_4sdp"
                android:layout_height="@dimen/_4sdp"
                android:background="@drawable/ic_bg_dot_marker" />

            <View
                android:id="@+id/bottomDotMarker"
                android:layout_width="@dimen/_4sdp"
                android:layout_height="@dimen/_4sdp"
                android:background="@drawable/ic_bg_dot_marker" />

            <View
                android:id="@+id/dotMarker"
                android:layout_width="@dimen/_4sdp"
                android:layout_height="@dimen/_4sdp"
                android:background="@drawable/ic_bg_dot" />

            <TextView
                android:id="@+id/txvTemperature"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_84sdp"
                android:gravity="bottom|center_horizontal"
                app:temperatureWithUnit="@{viewModel.currentInfo}"
                android:textColor="?attr/colorOnPrimarySurface"
                tools:text="28 °C" />

            <TextView
                android:id="@+id/txvCondition"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_42sdp"
                android:gravity="top|center_horizontal"
                app:condition="@{viewModel.currentInfo}"
                android:textColor="?attr/colorOnPrimarySurface"
                tools:text="Clear" />

            <TextView
                android:id="@+id/txvToday"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="@string/today"
                android:textColor="?attr/colorOnPrimarySurface" />

            <TextView
                android:id="@+id/txvTodaySeparatorMinMax"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slash"
                android:textColor="?attr/colorOnPrimarySurface" />

            <TextView
                android:id="@+id/txvTodayMinTemp"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:minimumTemperature="@{viewModel.currentInfo}"
                tools:text="22°"
                android:textColor="?attr/colorOnPrimarySurface" />

            <TextView
                android:id="@+id/txvTodayMaxTemp"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:maximumTemperature="@{viewModel.currentInfo}"
                tools:text="28°"
                android:textColor="?attr/colorOnPrimarySurface" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lotConditionImage"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_140sdp"
                app:lottie_autoPlay="true"
                app:weatherAnimation="@{viewModel.currentInfo}"
                app:lottie_loop="true"
                app:lottie_speed="1" />

            <LinearLayout
                android:id="@+id/layoutDayNight"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_bg_card"
                android:orientation="vertical"
                android:padding="@dimen/_8sdp">

                <org.xapps.apps.weatherx.views.custom.DayNightView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:drawable="@drawable/ic_sun_with_background"
                    app:progress="@{viewModel.currentInfo}"
                    app:progressColor="@color/sunrise" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_4sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:src="@drawable/ic_sunrise"
                            app:tint="@color/sunrise" />

                        <Space
                            android:layout_width="@dimen/_6sdp"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextAppearance.MaterialComponents.Body1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_11ssp"
                                app:timestampToSimpleHour="@{viewModel.currentInfo != null ? viewModel.currentInfo.sunrise : 0}"
                                tools:text="19:45" />

                            <TextView
                                style="@style/TextAppearance.AppCompat.Body1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sunrise"
                                android:textSize="@dimen/_9ssp" />

                        </LinearLayout>

                    </LinearLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:src="@drawable/ic_sunset"
                            app:tint="@color/sunset" />

                        <Space
                            android:layout_width="@dimen/_6sdp"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextAppearance.MaterialComponents.Body1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_11ssp"
                                app:timestampToSimpleHour="@{viewModel.currentInfo != null ? viewModel.currentInfo.sunset : 0}"
                                tools:text="19:45" />

                            <TextView
                                style="@style/TextAppearance.AppCompat.Body1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sunset"
                                android:textSize="@dimen/_9ssp" />

                        </LinearLayout>

                    </LinearLayout>

<!--                    <ImageView-->
<!--                        android:layout_width="@dimen/_18sdp"-->
<!--                        android:layout_height="@dimen/_18sdp"-->
<!--                        android:src="@drawable/ic_sunrise"-->
<!--                        app:tint="@color/sunrise" />-->

